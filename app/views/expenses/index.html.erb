<% require_relative '../../components/expense/expense_component' %>
<p style="color: green"><%= notice %></p>

<h1>Expenses</h1>

<div id="expenses">
  <% @expenses.each do |expense| %>
    <%= render ExpenseComponent.new(id: expense.id, amount: expense.amount_in_pennies) %>
    <p>
      <%= link_to "Show this expense", user_expense_path(params[:user_id], expense) %>
    </p>
  <% end %>
</div>

<%= link_to "New expense", new_user_expense_path %>

<%= link_to "Summary", summary_user_expenses_path %>

<%= link_to "Back to users", users_path %>